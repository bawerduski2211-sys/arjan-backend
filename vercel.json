{
  "version": 2,
  "builds": [
    { "src": "api/index.js", "use": "@vercel/node" }
  ],
  "routes": [
    // ئەڤە ڕێکا پەیوەندییا چاتێیە دگەل عەقڵی
    { "src": "/api/chat", "dest": "api/index.js" },
    
    // ئەگەر فۆلدەرێ دیزاینا تە ناڤێ وێ 'Frontend' بیت، ڤێرە بکاربینە
    // ئەگەر هەمی فایلێن HTML ل دەرڤە بن، ئەڤ هێڵا خوارێ ژێببە
    { "src": "/(.*)", "dest": "/$1" }
  ]
}
